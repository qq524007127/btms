<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>

	<constant name="devMode" value="true" />
	<constant name="objectFactory" value="spring" />

	<!-- 返回json数据基础包 -->
	<package name="json-base" namespace="/api" extends="json-default">

		<global-results>
			<result name="runtimeError">/WEB-INF/view/runtime_error.jsp</result>
			<result name="exception">/WEB-INF/view/login.jsp</result>
		</global-results>

		<global-exception-mappings>
			<exception-mapping result="runtimeError" exception="AppRuntimeException"></exception-mapping>
		</global-exception-mappings>

		<action name="runtimeError" class="runtimeErrorAction" method="executeRuntimeError">
			<result type="json">
				<param name="root">message</param>
				<param name="contentType">text/html</param>
			</result>
		</action>

		<!-- 获取所用的福位级别 -->
		<action name="getLevels" class="levelAction" method="getLevels">
			<result type="json">
				<param name="root">levList</param>
			</result>
		</action>

		<!-- 获取所用的区域 -->
		<action name="getAreas" class="blessSeatAction" method="getAreas">
			<result type="json">
				<param name="root">areaList</param>
			</result>
		</action>

		<!-- 会员捐赠模块 -->
		<action name="memberPay_*Grid" class="memberPayAction" method="{1}Grid">
			<result type="json">
				<param name="root">{1}Grid</param>
			</result>
		</action>
		
		<action name="memberPay_*List" class="memberPayAction" method="{1}List">
			<result type="json">
				<param name="root">{1}List</param>
				<param name="contentType">text/html</param>
			</result>
		</action>

		<action name="memberPay_*" class="memberPayAction" method="{1}">
			<result type="json">
				<param name="root">message</param>
				<param name="contentType">text/html</param>
			</result>
		</action>
		
		<!-- 企业捐赠模块 -->
		<action name="enterprisePay_*Grid" class="enterprisePayAction" method="{1}Grid">
			<result type="json">
				<param name="root">{1}Grid</param>
			</result>
		</action>
		
		<action name="enterprisePay_*List" class="enterprisePayAction" method="{1}List">
			<result type="json">
				<param name="root">{1}List</param>
				<param name="contentType">text/html</param>
			</result>
		</action>

		<action name="enterprisePay_*" class="enterprisePayAction" method="{1}">
			<result type="json">
				<param name="root">message</param>
				<param name="contentType">text/html</param>
			</result>
		</action>
		
		<action name="constant_*" class="constantAction" method="{1}">
			<result type="json">
				<param name="root">{1}</param>
			</result>
		</action>

		<action name="*_grid" class="{1}Action" method="grid">
			<result type="json">
				<param name="root">dataGrid</param>
			</result>
		</action>

		<action name="*_*" class="{1}Action" method="{2}">
			<result type="json">
				<param name="root">message</param>
				<param name="contentType">text/html</param>
			</result>
		</action>
	</package>
	
	<!-- 模块管理 -->
	<package name="module" namespace="/api" extends="json-base">
		<action name="root_list" class="moduleAction" method="rootModuleList">
			<result type="json">
				<param name="root">rootModuleList</param>
			</result>
		</action>
	</package>
</struts>    
